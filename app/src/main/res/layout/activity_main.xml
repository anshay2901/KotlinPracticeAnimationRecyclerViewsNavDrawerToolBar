<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@drawable/materialheader">
    <TextView
            android:text="Hi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hi" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="67dp"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="48sp" android:textStyle="bold|italic"
            android:textColor="#D32F2F" android:visibility="invisible"/>
    <TextView
            android:text="Just Practicing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/jst_prac" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="176dp"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="34sp" android:textStyle="italic"
            app:layout_constraintHorizontal_bias="0.497" android:textColor="#D32F2F" android:visibility="invisible"/>
    <TextView
            android:text="Have a Look!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hv_a_look"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="276dp"
            app:layout_constraintHorizontal_bias="0.496" android:textColor="#D32F2F" android:visibility="invisible"/>
    <android.support.v4.view.ViewPager
            android:layout_width="0dp"
            android:layout_height="0dp" tools:srcCompat="@tools:sample/backgrounds/scenic"
            android:id="@+id/images"
            android:layout_marginTop="360dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/rv_button"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="54dp" android:layout_marginEnd="54dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="75dp"
            android:visibility="invisible"/>
    <TextView
            android:text="Swipe the image to see more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/swipe_to_see"
            android:textColor="#D32F2F"
            app:layout_constraintStart_toStartOf="@+id/images" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/images"
            android:visibility="invisible" app:layout_constraintVertical_bias="0.0" android:layout_marginStart="45dp"
            android:layout_marginTop="8dp"/>
    <Button
            android:text="To RV"
            android:layout_width="121dp"
            android:layout_height="48dp"
            android:id="@+id/rv_button"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/images"
            android:layout_marginEnd="16dp" android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:width="64dp"
            android:background="#292A2F" android:textColor="#D32F2F"
            style="@android:style/Widget.Material.Button.Borderless.Colored" android:visibility="invisible"/>
</android.support.constraint.ConstraintLayout>